<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/root_layout">
        <com.tongxin.youni.widget.TitleBar
            android:id="@+id/titleBar2"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.tongxin.youni.widget.CircleImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/picture4"
                app:border_color="@color/linen"
                app:border_width="1dp"
                />
            <Button
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/changeHead"
                android:background="@drawable/button3"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="更改头像"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
           >
            <TextView
                android:layout_marginLeft="80dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名   "/>
            <EditText
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                android:id="@+id/name"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="你的姓名"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2">
            <TextView
                android:layout_marginLeft="80dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别   "/>
            <Spinner
                android:id="@+id/sex"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:entries="@array/chooseSex">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2"
            >
            <TextView
                android:layout_marginLeft="80dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电话号   "/>

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                android:id="@+id/telNumber"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="你的电话号"/>
        </LinearLayout>

        <LinearLayout
            android:onClick="changeDormitoryNumber"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2">
            <TextView
                android:layout_marginLeft="80dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宿舍号   "/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                android:id="@+id/dormitoryNumber"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="你的宿舍号例如:D-1111"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg2">
            <TextView
                android:layout_marginLeft="80dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址   "/>

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@null"
                android:id="@+id/defaultAddress"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:hint="可不填，不填默认为宿舍"/>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
